</script>

<script id="tpl_tblCustomer" type="text/template">
  <table class="mdl-data-table mdl-shadow--2dp" style="width:100%">
      <thead> 
          <th style="width:1%">id</th> 
          <th style="width:40%;vertical-align:left">Name</th> 
          <th style="width:1%">Email</th>
          <th style="width:1%">Input Order</th>
          <th style="width:1%">Date Order</th>
          <th>&nbsp;</th>           
      </thead> 
      <tbody> 
          {{#list}} 
          <tr> 
              <td>{{customerID}}</td> 
              <td>{{customerFirstName}} {{customerLastName}}</td>               
              <td>{{customerEmail}}</td>
              <td>{{customerOrder}}</td>
              <td>{{customerOrderDate}}</td>
              <td><button type="button" onclick="showModal({{customerID}})" data-target="#updateOrder" data-toggle="modal" class="btn btn-primary py-1 px-1">Orders</button><td>               
          </tr> 
          {{/list}} 
      </tbody> 
  </table>
</script>

