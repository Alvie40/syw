<div class="modal fade" id="updateOrder" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Request a Quote</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/manager/update-customer">
                    <input type="hidden" id="customerId" name="customerId" />
					<div class="form-group">
						<label for="input_order" class="text-black">Input Order</label>
						<input type="text" class="form-control" name="inputOrder" id="input_order">
					</div>
					<div class="form-group">
						<label for="date_order" class="text-black">Date Order</label>
						<input type="date" class="form-control" name="dateOrder" id="date_order">
					</div>
					<div class="form-group">
						<input type="submit" value="Save" class="btn btn-primary">
					</div>
				</form>
			</div>

		</div>
	</div>
</div>  


<script id="tpl_tblEmployee" type="text/template">
  <table class="mdl-data-table mdl-shadow--2dp" style="width:100%">
      <thead> 
          <th>id</th> 
          <th>First Name</th> 
          <th>Last Name</th> 
          <th>Email</th>           
      </thead> 
      <tbody> 
          {{#list}} 
